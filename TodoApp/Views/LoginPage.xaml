<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TodoApp.ViewModels"
             x:Class="TodoApp.Views.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="Logowanie"
             Shell.NavBarIsVisible="False">

    <ScrollView HorizontalScrollBarVisibility="Never">
        <Grid>
            <Border StrokeThickness="0"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    MaximumWidthRequest="400"
                    Margin="30">

                <VerticalStackLayout Spacing="25">

                    <Image Source="logo.png" 
                           HeightRequest="160" 
                           HorizontalOptions="Center"
                           Aspect="AspectFit" />

                    <Label Text="Witaj w TodoApp!" 
                           Margin="0, -10, 0, 0"
                           FontSize="28" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{DynamicResource Primary}" />

                    <VerticalStackLayout Spacing="15">
                        <Entry Placeholder="Nazwa użytkownika"
                               Text="{Binding Username}" 
                               HorizontalOptions="Fill"/>

                        <Entry Placeholder="Hasło"
                               IsPassword="True"
                               Text="{Binding Password}" 
                               HorizontalOptions="Fill"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                        <Button Text="Zaloguj się"
                                Command="{Binding LoginCommand}"
                                HeightRequest="55"
                                FontSize="18"
                                HorizontalOptions="Fill"/>

                        <Button Text="Nie masz konta? Zarejestruj się"
                                Command="{Binding GoToRegisterCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{DynamicResource Primary}"
                                FontSize="14"
                                HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>