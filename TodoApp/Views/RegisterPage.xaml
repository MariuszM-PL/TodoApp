<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TodoApp.ViewModels"
             x:Class="TodoApp.Views.RegisterPage"
             x:DataType="vm:RegisterViewModel"
             Title="Rejestracja"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid>
            <VerticalStackLayout Spacing="20" 
                                 Padding="30" 
                                 VerticalOptions="Center" 
                                 HorizontalOptions="Center"
                                 MaximumWidthRequest="400">

                <Image Source="logo.png" 
                       HeightRequest="120" 
                       HorizontalOptions="Center"
                       Aspect="AspectFit" />

                <Label Text="Utwórz konto" 
                       FontSize="28" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource Primary}" />

                <VerticalStackLayout Spacing="15">
                    <Entry Placeholder="Wybierz nazwę użytkownika"
                           Text="{Binding Username}" 
                           HorizontalOptions="Fill"/>

                    <Entry Placeholder="Wybierz hasło"
                           IsPassword="True"
                           Text="{Binding Password}" 
                           HorizontalOptions="Fill"/>

                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Button Text="Zarejestruj się"
                            Command="{Binding RegisterCommand}"
                            HeightRequest="55"
                            FontSize="18"/>

                    <Button Text="Masz już konto? Zaloguj się"
                            Command="{Binding GoToLoginCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{DynamicResource Primary}"
                            FontSize="14"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>